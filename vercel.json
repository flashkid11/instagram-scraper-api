{
    "version": 2,
    "builds": [
      {
        "src": "api/index.py",
        "use": "@vercel/python"
      },
      {
        "src": "instagram-scraper-frontend/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "build"
        }
      }
    ],
    "rewrites": [
      {
        "source": "/api/(.*)",
         "destination": "/api/index" 
      },
      {
        "source": "/(.*)",
        "destination": "/index.html"
      }
    ]
  }